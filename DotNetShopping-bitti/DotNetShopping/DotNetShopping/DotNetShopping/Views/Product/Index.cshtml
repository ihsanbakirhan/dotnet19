@model IEnumerable<DotNetShopping.Models.ProductListModel>

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Products</h2>
<div class="error">@Request.QueryString["Error"]</div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VariantName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrandName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OnSale)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsVisible)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.PhotoName != "")
                    {
                        <img src="~/ProductImage/@(item.PhotoName)-2.jpg" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VariantName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SupplierName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BrandName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OnSale)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsVisible)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    @Html.ActionLink("ProductEdit", "Edit", new { id = item.ProductId }) |
                    @Html.ActionLink("Variants", "Variants", new { id = item.ProductId }) |
                    @Html.ActionLink("CreateVariant", "VariantCreate", new { id = item.ProductId }) |
                    @Html.ActionLink("VariantEdit", "VariantEdit", new { id = item.VariantId }) |
                    @Html.ActionLink("ProductDelete", "Delete", new { id = item.ProductId }, new { @class = "deleteProduct" }) |
                    @Html.ActionLink("VariantDelete", "VariantDelete", new { id = item.VariantId }, new { @class = "deleteVariant" }) |
                </td>
            </tr>
        }
    </tbody>
</table>
@section head{
    <link href="http://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css">
}
@section scripts{
    <script src="http://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
}

@section scriptsready {
    $('.table').DataTable();
    $('.deleteProduct').click(function(){
    return confirm("Are you sure you want to delete this product?");
    });
    $('.deleteVariant').click(function(){
    return confirm("Are you sure you want to delete this variant?");
    });
}


