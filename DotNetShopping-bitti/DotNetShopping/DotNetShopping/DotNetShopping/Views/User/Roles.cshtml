@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Roles</h2>
@Html.ActionLink("Create New", "CreateRole")

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Delete", "DeleteRole", new { RoleName = item.Name }, new { @class = "deleteRole" })
                </td>
            </tr>
        }
    </tbody>
</table>
@section head{
    <link href="http://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css">
}
@section scripts{
    <script src="http://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
}
@section scriptsready{
    $('.table').DataTable();
    $('.deleteRole').click(function(){
    return confirm("Are you sure you want to delete this role?");
    });
}
