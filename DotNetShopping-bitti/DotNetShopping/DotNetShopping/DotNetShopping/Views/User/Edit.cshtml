@model DotNetShopping.Models.UserRolesModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>User Edit</h2>

<div>
    <h4>User</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayFor(model => model.Email)
        </dt>
    </dl>
    <br /><br />
    <div>
        @foreach (string role in Model.Roles)
        {
            <div>
                @role @Html.ActionLink("remove", "RemoveUserRole", new { UserId = Model.UserId, RoleName = role })
            </div>
        }
    </div>
    @using (Html.BeginForm("AddUserRole", "User", new { UserId = Model.UserId },FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.Label("Roles", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Roles", null, htmlAttributes: new { @class = "form-control" })               
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Role" class="btn btn-default" />
            </div>
        </div>
    }
</div>
